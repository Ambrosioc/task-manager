{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler", // Peut rester 'bundler' si nécessaire pour ton projet
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".", // Définit la base pour les chemins relatifs
		"paths": {
			"@/components/*": ["components/*"], // Alias pour le dossier components
			"@/utils/*": ["utils/*"], // Alias pour les fonctions utilitaires
			"@/styles/*": ["styles/*"], // Alias pour les styles
			"@/public/*": ["public/*"], // Alias pour les assets publics
			"@/app/*": ["app/*"] // Alias pour le dossier app
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
